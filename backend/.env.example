# Environment Configuration
# Copy this file to .env and update values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ridesharing

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Payment (Ä°yzico)
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# SMS (Netgsm)
NETGSM_USERNAME=your-netgsm-username
NETGSM_PASSWORD=your-netgsm-password
NETGSM_HEADER=RIDESHARE

# Firebase (FCM)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# File Storage (Cloudflare R2)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=ridesharing-files

# App Config
NODE_ENV=development
PORT=3000
API_VERSION=v1
USE_MOCK_INTEGRATIONS=true
OCR_LANGS=tur+eng
OTP_TTL_SECONDS=300

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173,http://localhost:8080

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Booking
BOOKING_HOLD_MINUTES=15
BOOKING_DISPUTE_WINDOW_HOURS=12
BOOKING_AUTO_COMPLETE_DELAY_MINUTES=60

# Payout security
PAYOUT_CHANGE_FREEZE_HOURS=24
PAYOUT_CHALLENGE_TTL_MINUTES=30
PAYOUT_CHALLENGE_MAX_ATTEMPTS=5
PAYOUT_VERIFICATION_SALT=change-me-payout-salt

# Admin
ADMIN_API_KEY=change-me-admin-key

# Bus price scraping
BUS_SCRAPER_ENABLED=false
BUS_SCRAPER_HEADLESS=true
BUS_SCRAPER_TIMEOUT_MS=15000
BUS_SCRAPER_CACHE_TTL_SECONDS=86400
BUS_SCRAPER_MAX_ROUTES=8

# Trip search cache
TRIP_SEARCH_CACHE_TTL_SECONDS=120

# Routing provider (self-host OSRM suggested for TR-only)
ROUTE_PROVIDER=osrm
OSRM_BASE_URL=http://localhost:5000

# Fare estimation defaults (Route estimate API)
FARE_BASE_FEE=40
FARE_PER_KM=2.4
FARE_PER_MIN=0.35
FARE_PLATFORM_FEE=8
FARE_TRAFFIC_MULTIPLIER_PEAK=1.12

# Live location
TRIP_LOCATION_TTL_SECONDS=600
